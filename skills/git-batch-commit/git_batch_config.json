{
  "threshold": 10,
  "default_language": "en",
  "preferred_scopes": [
    "auth",
    "api",
    "ui",
    "database",
    "core",
    "config",
    "tests",
    "docs"
  ],
  "commit_types": [
    "feat",
    "fix",
    "docs",
    "refactor",
    "chore",
    "style",
    "test",
    "perf"
  ],
  "auto_execute": false,
  "language_detection": {
    "enabled": true,
    "fallback": "en"
  },
  "grouping_strategy": "feature",
  "max_files_per_batch": 8,
  "scope_detection": {
    "enabled": true,
    "custom_mappings": {
      "authentication": "auth",
      "endpoints": "api",
      "components": "ui",
      "models": "database"
    }
  },
  "commit_message_format": {
    "max_subject_length": 72,
    "include_body": true,
    "include_file_list": true
  },
  "validation": {
    "check_unstaged": true,
    "warn_large_files": true,
    "require_scope": false
  }
}
