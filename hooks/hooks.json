{
  "description": "Automatic hooks for session management, memory handling, and session recording.",
  "hooks": {
    "SessionStart": [
      {
        "type": "script",
        "script": "${CLAUDE_PLUGIN_ROOT}/hooks/check-deps.py",
        "timeout": 180000
      }
    ],
    "PreToolUse": [
      {
        "type": "script",
        "script": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-tool-use.py",
        "timeout": 5000
      }
    ]
  }
}
